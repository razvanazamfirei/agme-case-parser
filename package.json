{
  "name": "case-parser",
  "version": "1.0.0",
  "description": "Anesthesia case parser with Chrome extension for ACGME submission",
  "type": "module",
  "scripts": {
    "build": "bun run chrome-extension/build.js",
    "build:dev": "bun run chrome-extension/build.js --dev",
    "watch": "bun run chrome-extension/build.js --dev --watch",
    "clean": "rm -rf chrome-extension/dist",
    "lint": "biome lint chrome-extension/",
    "lint:fix": "biome lint --write chrome-extension/",
    "format": "biome format --write chrome-extension/",
    "check": "biome check chrome-extension/"
  },
  "dependencies": {
    "@types/chrome": "^0.1.33",
    "prettier": "^3.8.0",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-gamut": "^1.3.4",
    "stylelint-group-selectors": "^1.0.10",
    "stylelint-rem-over-px": "^1.0.2",
    "stylelint-suitcss": "^5.0.0",
    "stylelint-use-logical": "^2.1.2",
    "stylelint-use-nesting": "^6.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.11",
    "tailwindcss": "^4.1.18"
  }
}
