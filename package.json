{
  "name": "case-parser",
  "version": "1.0.0",
  "description": "Anesthesia case parser with Chrome extension for ACGME submission",
  "type": "module",
  "scripts": {
    "build": "cd chrome-extension && bun run build",
    "build:dev": "cd chrome-extension && bun run build:dev",
    "watch": "cd chrome-extension && bun run dev",
    "clean": "rm -rf chrome-extension/dist",
    "lint": "cd chrome-extension && bun run lint",
    "lint:fix": "cd chrome-extension && bun run lint:fix",
    "format": "cd chrome-extension && bun run format",
    "check": "cd chrome-extension && bun run check"
  },
  "dependencies": {
    "@types/chrome": "^0.1.36",
    "prettier": "^3.8.1",
    "stylelint": "^17.1.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-gamut": "^1.3.4",
    "stylelint-group-selectors": "^1.0.10",
    "stylelint-rem-over-px": "^1.0.2",
    "stylelint-suitcss": "^5.0.0",
    "stylelint-use-logical": "^2.1.2",
    "stylelint-use-nesting": "^6.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}
