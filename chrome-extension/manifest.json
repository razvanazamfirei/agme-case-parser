{
  "manifest_version": 3,
  "name": "ACGME Case Submitter",
  "version": "1.1",
  "description": "Auto-fill ACGME case entry forms with difficult airway and life-threatening pathology support",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://apps.acgme.org/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://apps.acgme.org/ads/CaseLogs/CaseEntry/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
