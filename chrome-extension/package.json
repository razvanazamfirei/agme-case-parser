{
  "name": "acgme-case-submitter",
  "version": "1.1.0",
  "description": "Chrome extension to auto-fill ACGME case entry forms",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "NODE_ENV=development vite build",
    "clean": "rm -rf dist",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "package:zip": "bun run clean && bun run build && cd dist && zip -r ../acgme-case-submitter-v$npm_package_version.zip ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@crxjs/vite-plugin": "^2.3.0",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
